<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="UI.Views.HomeScreen">
    <Border BorderThickness="100">
        <Grid RowDefinitions="Auto, *, Auto">
            <TextBlock Grid.Row="0" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Top" Padding="50">World Crucible</TextBlock>
            <Grid Grid.Row="1" HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="100">
                    <Button Name="Create" MinHeight="80" MinWidth="80">Create</Button>
                    <Button MinHeight="80" MinWidth="80">Host</Button>
                    <Button MinHeight="80" MinWidth="80">Join</Button>
                </StackPanel>

            </Grid>

        </Grid>

    </Border>
</UserControl>
<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">

            <!-- Add Controls for Previewer Here -->
            <StackPanel>
                <Button Classes="green">
                </Button>
                <ToggleButton Classes="green">
                </ToggleButton>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Add Styles Here -->
    <Style Selector="Button.green">
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Background" Value="#657153" />
    </Style>
    <Style Selector="ToggleButton.green">
        <Setter Property="Width" Value="50" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Background" Value="#657153" />
    </Style>

    <Style Selector="Button.homeButton">
        <Setter Property="Width" Value="120" />
        <Setter Property="Height" Value="50" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="FontWeight" Value="Light" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />

        <Setter Property="BorderThickness" Value="2" />
      <!--   <Setter Property="BorderBrush" Value="#B46B89" /> Medium Brown Border -->
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style Selector="Button.homeButton /template/ ContentPresenter">
        <Setter Property="Background" Value="#be9551" /> <!-- Dark Brown -->
              <Setter Property="Foreground" Value="#faf8f2" />  <!--  Gold Text -->
    </Style>

    <Style Selector="Button.homeButton:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#b18145" /> <!-- Medium Brown on Hover -->
        <!--     <Setter Property="Foreground" Value="#FFEB3B" />  Gold Text -->
    </Style>

    <Style Selector="Button.homeButton:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#93683b" /> <!-- Darker Brown on Press -->
        <!--  <Setter Property="Foreground" Value="#FFEB3B" /> Gold Text -->
    </Style>


</Styles>